<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="250dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="11dp"
    android:focusable="true"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/cornerRadius">


    <FrameLayout
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:background="@color/editTextColor"
        >


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context="com.example.bien_aime.wqfinalproject.MapsActivity" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            android:weightSum="1">


            <TextView
                android:id="@+id/nombreDispositivo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Dispositivo 1"
                android:textSize="30dp"
                android:layout_weight="0.08" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/buttonMonitoreo"
                android:layout_width="wrap_content"
                android:onClick="didTapButton"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_menu_send"
                 />

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>