<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="80dp"
            android:scrollbarSize="@dimen/cornerRadius"
            app:title="John Doe"
            app:titleEnabled="true"
            app:expandedTitleTextAppearance="@color/common_google_signin_btn_text_dark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/dispo"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:id="@+id/usernameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/editTextColor"
                android:textSize="@dimen/textSize_userProfile"
                />

            <TextView
                android:id="@+id/usernameProfileAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18dp"
                android:elevation="@dimen/elevation_circleImageProfile"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="-100dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/editTextColor"
                android:alpha="0"
                app:layout_behavior="com.zoonref.SimpleViewBehavior"
                app:dependsOn="@+id/appBarProfile"
                app:dependType="y"
                app:dependTargetY="-250dp"
                app:targetY="-5dp"
                app:targetAlpha="1"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:minHeight="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/dispositivo_profile" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editDispositivofab"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/colorFloating"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/edit"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end" />


</android.support.design.widget.CoordinatorLayout>