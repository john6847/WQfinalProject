<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="185dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="11dp"
    android:focusable="true"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/cornerRadius">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightcard_view"
        android:background="@color/backgroundCardView">

        <!--<TextView-->
        <!--android:id="@+id/nombreDispositivo1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:text="Nombre Dispositivo: "-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="@color/editTextColor"-->
        <!--android:textSize="@dimen/textSizeParameterPh" />-->

        <TextView
            android:id="@+id/nombreDispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Dispositivo"
            android:textColor="@color/editTextColor"
            android:textSize="@dimen/textSizeParameterPh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            android:weightSum="1">

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:textColor="@color/editTextColor"
                android:background="@drawable/btnlistardispo"
                android:layout_marginTop="15dp"
                android:text="Ver Ultima Muestra" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/editTextColor"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/informacionDispositivos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/btnlistardispo"
                android:textColor="@color/editTextColor"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="7dp"
                android:text="@string/info" />

        </LinearLayout>

        <Button
            android:id="@+id/localizacionDispo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/btnlistardispo"
            android:textColor="@color/editTextColor"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:text="@string/localizacion" />

    </FrameLayout>

</android.support.v7.widget.CardView>