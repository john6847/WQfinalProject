<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/heightcard_view"
    android:layout_width="match_parent"
    android:layout_marginBottom="11dp"
    android:focusable="true"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/cornerRadius">

    <FrameLayout
        android:layout_height="@dimen/heightcard_view"
        android:layout_width="match_parent"
        android:background="@color/backgroundCardView"
        >

        <LinearLayout
            android:layout_height="118dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            >

            <TextView
                android:id="@+id/nombreDispositivo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/editTextColor"
                android:text="Hi"

                android:textSize="@dimen/textSizeParameterPh"
                android:fontFamily="serif-monospace"
                />
</LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/cardViewPaddingLeft"
            >

            <Button
                android:id="@+id/localizacionDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/localizacion" />

            <Button
                android:id="@+id/informacionDispositivos"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/info"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="->" />

            <!--<Button-->
                <!--android:id="@+id/setearDefaultDispositivos"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:text="@string/default1"-->
                <!--/>-->
            </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>