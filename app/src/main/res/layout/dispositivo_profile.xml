                        <TextView
                            android:id="@+id/load_immueble_ciudad"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Normativa Asignada" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <!--<TextView-->
                <!--android:id="@+id/descripcionDispositivo"-->
