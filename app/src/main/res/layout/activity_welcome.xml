<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bien_aime.wqfinalproject.WelcomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/m"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"

            android:id="@+id/view" />

        <Button
            android:id="@+id/BtnListarDispo"
            android:layout_width="500dp"
            android:textColor="@color/editTextColor"
            android:layout_height="wrap_content"
            android:background="@drawable/btnlistardispo"
            android:text="Monitorear Dispositivos"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/BtnVerPerfil"
            android:layout_width="500dp"

            android:textColor="@color/editTextColor"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btnlistardispo"
            android:text="Ver Perfil Usuario"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>
